{% doc %}
  @prompt
    Create a custom Shopify section: “Clickable Banner Navigation” with full design control and smooth scroll animation.
    
    Core behavior
    
    Display one banner image
    
    Entire banner is clickable
    
    On click, navigate to:
    
    Selected collection OR product OR custom URL
    
    Banner must work across all screen sizes without breaking
    
    Customization (Theme Editor controls)
    
    Image picker (desktop & mobile)
    
    Banner width options:
    
    Full width / Contained
    
    Fixed banner height control (px / vh)
    
    Padding controls:
    
    Top, bottom, left, right (desktop & mobile)
    
    Border radius control
    
    Overlay toggle with:
    
    Overlay color
    
    Opacity slider
    
    Optional text overlay:
    
    Heading text
    
    Subtext
    
    Font size
    
    Text color
    
    Text alignment (left / center / right)
    
    Animation
    
    Entrance animation on scroll:
    
    Fade-up / Slide-up / Zoom-in (selectable)
    
    Smooth easing
    
    Trigger once when section enters viewport
    
    Admin-friendly
    
    All settings editable via Theme Customizer
    
    No hardcoded values
    
    Clean, reusable section
    
    Lightweight CSS & JS only (no external libraries)
    
    UX
    
    Cursor pointer on hover
    
    Subtle hover effect (scale or opacity)
    
    Fully accessible (alt text support)
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-banner-nav-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1), transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-banner-nav-{{ ai_gen_id }}.ai-banner-nav-animated-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-banner-nav-{{ ai_gen_id }}.ai-banner-nav-animation-fade-up-{{ ai_gen_id }} {
    transform: translateY(30px);
  }

  .ai-banner-nav-{{ ai_gen_id }}.ai-banner-nav-animation-slide-up-{{ ai_gen_id }} {
    transform: translateY(60px);
  }

  .ai-banner-nav-{{ ai_gen_id }}.ai-banner-nav-animation-zoom-in-{{ ai_gen_id }} {
    transform: scale(0.95);
  }

  .ai-banner-nav-container-{{ ai_gen_id }} {
    width: 100%;
    {% if block.settings.banner_width == 'contained' %}
      max-width: {{ block.settings.container_max_width }}px;
      margin-left: auto;
      margin-right: auto;
    {% endif %}
    padding-top: {{ block.settings.padding_top_desktop }}px;
    padding-bottom: {{ block.settings.padding_bottom_desktop }}px;
    padding-left: {{ block.settings.padding_left_desktop }}px;
    padding-right: {{ block.settings.padding_right_desktop }}px;
  }

  .ai-banner-nav-link-{{ ai_gen_id }} {
    position: relative;
    display: block;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    text-decoration: none;
    cursor: pointer;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-banner-nav-link-{{ ai_gen_id }}:hover {
    {% if block.settings.hover_effect == 'scale' %}
      transform: scale(1.02);
    {% elsif block.settings.hover_effect == 'opacity' %}
      opacity: 0.9;
    {% endif %}
  }

  .ai-banner-nav-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    {% if block.settings.height_unit == 'px' %}
      height: {{ block.settings.banner_height_px }}px;
    {% else %}
      height: {{ block.settings.banner_height_vh }}vh;
    {% endif %}
    overflow: hidden;
  }

  .ai-banner-nav-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-banner-nav-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-banner-nav-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-banner-nav-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-banner-nav-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .ai-banner-nav-text-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {% if block.settings.text_alignment == 'left' %}flex-start{% elsif block.settings.text_alignment == 'center' %}center{% else %}flex-end{% endif %};
    padding: 40px;
    text-align: {{ block.settings.text_alignment }};
    pointer-events: none;
  }

  .ai-banner-nav-heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_font_size }}px;
    font-weight: 700;
    margin: 0 0 12px 0;
    line-height: 1.2;
  }

  .ai-banner-nav-subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subtext_font_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-banner-nav-container-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top_mobile }}px;
      padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
      padding-left: {{ block.settings.padding_left_mobile }}px;
      padding-right: {{ block.settings.padding_right_mobile }}px;
    }

    .ai-banner-nav-image-wrapper-{{ ai_gen_id }} {
      {% if block.settings.height_unit == 'px' %}
        height: {{ block.settings.banner_height_px | times: 0.7 }}px;
      {% else %}
        height: {{ block.settings.banner_height_vh | times: 0.7 }}vh;
      {% endif %}
    }

    .ai-banner-nav-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size | times: 0.7 }}px;
    }

    .ai-banner-nav-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_font_size | times: 0.8 }}px;
    }

    .ai-banner-nav-text-overlay-{{ ai_gen_id }} {
      padding: 20px;
    }
  }
{% endstyle %}

<clickable-banner-{{ ai_gen_id }}
  class="ai-banner-nav-{{ ai_gen_id }} ai-banner-nav-animation-{{ block.settings.animation_type }}-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-banner-nav-container-{{ ai_gen_id }}">
    {% liquid
      assign link_url = ''
      if block.settings.link_type == 'collection' and block.settings.link_collection != blank
        assign link_url = block.settings.link_collection.url
      elsif block.settings.link_type == 'product' and block.settings.link_product != blank
        assign link_url = block.settings.link_product.url
      elsif block.settings.link_type == 'url' and block.settings.link_url != blank
        assign link_url = block.settings.link_url
      endif
    %}

    <a
      href="{{ link_url }}"
      class="ai-banner-nav-link-{{ ai_gen_id }}"
      {% if link_url == blank %}aria-disabled="true"{% endif %}
    >
      <div class="ai-banner-nav-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image_desktop != blank %}
          <picture>
            {% if block.settings.image_mobile != blank %}
              <source
                media="(max-width: 749px)"
                srcset="{{ block.settings.image_mobile | image_url: width: 1500 }}"
              >
            {% endif %}
            <img
              src="{{ block.settings.image_desktop | image_url: width: 2000 }}"
              alt="{{ block.settings.image_desktop.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image_desktop.width }}"
              height="{{ block.settings.image_desktop.height }}"
              class="ai-banner-nav-image-{{ ai_gen_id }}"
            >
          </picture>
        {% else %}
          <div class="ai-banner-nav-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-banner-nav-empty-state-{{ ai_gen_id }}">
              Add a banner image to get started
            </div>
          </div>
        {% endif %}

        {% if block.settings.show_overlay %}
          <div class="ai-banner-nav-overlay-{{ ai_gen_id }}"></div>
        {% endif %}

        {% if block.settings.show_text_overlay %}
          <div class="ai-banner-nav-text-overlay-{{ ai_gen_id }}">
            {% if block.settings.heading_text != blank %}
              <h2 class="ai-banner-nav-heading-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h2>
            {% endif %}
            {% if block.settings.subtext != blank %}
              <p class="ai-banner-nav-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </a>
  </div>
</clickable-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class ClickableBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.hasAnimated = false;
      }

      connectedCallback() {
        this.setupIntersectionObserver();
      }

      setupIntersectionObserver() {
        const options = {
          root: null,
          rootMargin: '0px 0px -100px 0px',
          threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting && !this.hasAnimated) {
              this.classList.add('ai-banner-nav-animated-{{ ai_gen_id }}');
              this.hasAnimated = true;
            }
          });
        }, options);

        observer.observe(this);
      }
    }

    customElements.define('clickable-banner-{{ ai_gen_id }}', ClickableBanner{{ ai_gen_id }});
  })();
</script>

