{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-three-images-{{ ai_gen_id }} {
    background-color: #ffffff;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    width: 100%;
  }

  .ai-three-images-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    gap: {{ block.settings.gap_between_images }}px;
    width: 100%;
    max-width: 100%;
  }

  .ai-three-images-item-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    padding: {{ block.settings.image_padding }}px;
  }

  .ai-three-images-item-{{ ai_gen_id }}--left {
    justify-content: flex-start;
  }

  .ai-three-images-item-{{ ai_gen_id }}--center {
    justify-content: center;
  }

  .ai-three-images-item-{{ ai_gen_id }}--right {
    justify-content: flex-end;
  }

  .ai-three-images-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    width: 100%;
  }

  .ai-three-images-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }

  .ai-three-images-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-three-images-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    max-width: 150px;
  }

  @media screen and (max-width: 749px) {
    .ai-three-images-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.gap_between_images }}px;
    }

    .ai-three-images-item-{{ ai_gen_id }} {
      width: 100%;
      justify-content: center;
    }

    .ai-three-images-wrapper-{{ ai_gen_id }} {
      max-width: {{ block.settings.max_width }}px;
    }
  }
{% endstyle %}

<div class="ai-three-images-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-three-images-container-{{ ai_gen_id }}">
    <div class="ai-three-images-item-{{ ai_gen_id }} ai-three-images-item-{{ ai_gen_id }}--{{ block.settings.alignment_1 }}">
      <div class="ai-three-images-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image_1 %}
          <img
            src="{{ block.settings.image_1 | image_url: width: 600 }}"
            alt="{{ block.settings.image_1.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_1.width }}"
            height="{{ block.settings.image_1.height }}"
          >
        {% else %}
          <div class="ai-three-images-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-three-images-item-{{ ai_gen_id }} ai-three-images-item-{{ ai_gen_id }}--{{ block.settings.alignment_2 }}">
      <div class="ai-three-images-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image_2 %}
