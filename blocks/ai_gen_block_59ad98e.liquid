        {% else %}
          <div class="ai-three-images-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-three-images-item-{{ ai_gen_id }} ai-three-images-item-{{ ai_gen_id }}--{{ block.settings.alignment_3 }}">
      <div class="ai-three-images-wrapper-{{ ai_gen_id }}">
