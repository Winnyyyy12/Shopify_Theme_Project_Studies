<premium-product-slider-{{ ai_gen_id }} class="ai-premium-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-premium-slider__container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <div class="ai-premium-slider__header-{{ ai_gen_id }}">
        <h2 class="ai-premium-slider__title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      </div>
    {% endif %}

    <div class="ai-premium-slider__viewport-{{ ai_gen_id }}">
      <div class="ai-premium-slider__track-{{ ai_gen_id }}" data-slider-track>
        {% for i in (1..9) %}
          {% liquid
            assign product_key = 'product_' | append: i
            assign product = block.settings[product_key]
            assign tag_key = 'product_' | append: i | append: '_tag'
            assign tag = block.settings[tag_key]
            assign rating_key = 'product_' | append: i | append: '_rating'
            assign rating = block.settings[rating_key]
            assign offer_key = 'product_' | append: i | append: '_offer'
            assign offer = block.settings[offer_key]
          %}

          {% if product != blank %}
            <a href="{{ product.url }}" class="ai-premium-slider__card-{{ ai_gen_id }}" data-product-card>
              <div class="ai-premium-slider__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-premium-slider__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% else %}
                  <div class="ai-premium-slider__image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if tag != blank %}
                  <div class="ai-premium-slider__tag-{{ ai_gen_id }}">{{ tag }}</div>
                {% endif %}

                {% if rating != blank %}
                  <div class="ai-premium-slider__rating-{{ ai_gen_id }}">
                    {{ rating }} ★
                  </div>
                {% endif %}
              </div>

              <div class="ai-premium-slider__content-{{ ai_gen_id }}">
                <h3 class="ai-premium-slider__product-name-{{ ai_gen_id }}">{{ product.title }}</h3>

                <div class="ai-premium-slider__price-row-{{ ai_gen_id }}">
                  <span class="ai-premium-slider__price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-premium-slider__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </div>

                {% if offer != blank %}
                  <div class="ai-premium-slider__offer-row-{{ ai_gen_id }}">
                    <span class="ai-premium-slider__offer-pill-{{ ai_gen_id }}">{{ offer }}</span>
                    <span class="ai-premium-slider__checkout-text-{{ ai_gen_id }}">At Checkout</span>
                  </div>
                {% endif %}
              </div>
            </a>
          {% else %}
            <div class="ai-premium-slider__card-{{ ai_gen_id }}" data-product-card>
              <div class="ai-premium-slider__image-wrapper-{{ ai_gen_id }}">
                <div class="ai-premium-slider__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
                <div class="ai-premium-slider__tag-{{ ai_gen_id }}">NEW</div>
                <div class="ai-premium-slider__rating-{{ ai_gen_id }}">4.8 ★</div>
              </div>
