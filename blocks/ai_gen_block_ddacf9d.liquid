    font-size: {{ block.settings.compare_price_size }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.6;
  }

  .ai-premium-slider__offer-row-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ai-premium-slider__offer-pill-{{ ai_gen_id }} {
    background: {{ block.settings.offer_pill_background }};
    color: {{ block.settings.offer_pill_text_color }};
    padding: 4px 10px;
