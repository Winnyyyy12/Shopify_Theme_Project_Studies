    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-premium-slider__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-premium-slider__header-{{ ai_gen_id }} {
    margin-bottom: 32px;
  }

  .ai-premium-slider__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    margin: 0;
    letter-spacing: -0.5px;
  }

  .ai-premium-slider__viewport-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .ai-premium-slider__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform;
  }

  .ai-premium-slider__card-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - ({{ block.settings.card_gap }}px * 3)) / 4);
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-premium-slider__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-premium-slider__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: {{ block.settings.image_aspect_ratio }}%;
    background: {{ block.settings.image_background }};
    overflow: hidden;
  }

  .ai-premium-slider__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-premium-slider__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
  }

  .ai-premium-slider__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-premium-slider__tag-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background: {{ block.settings.tag_background }};
    color: {{ block.settings.tag_text_color }};
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
  }

  .ai-premium-slider__rating-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background: {{ block.settings.rating_background }};
    color: {{ block.settings.rating_text_color }};
    padding: 6px 10px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 4px;
    z-index: 2;
  }

  .ai-premium-slider__content-{{ ai_gen_id }} {
    padding: 16px;
  }

  .ai-premium-slider__product-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_name_size }}px;
    font-weight: 700;
    color: {{ block.settings.product_name_color }};
    margin: 0 0 12px 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-premium-slider__price-row-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 10px;
  }

  .ai-premium-slider__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 700;
    color: {{ block.settings.price_color }};
  }

