              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</premium-product-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class PremiumProductSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-slider-track]');
        this.cards = Array.from(this.querySelectorAll('[data-product-card]'));
        this.currentIndex = 0;
        this.isTransitioning = false;
        this.autoplayInterval = null;
        this.autoplayDelay = {{ block.settings.autoplay_delay | times: 1000 }};
        this.visibleCards = 4;
        this.totalCards = this.cards.length;
      }

      connectedCallback() {
        if (this.cards.length === 0) return;
        
        this.cloneCards();
        this.setupAutoplay();
        this.setupHoverPause();
        this.updateVisibleCards();
        window.addEventListener('resize', this.updateVisibleCards.bind(this));
      }

      disconnectedCallback() {
        this.stopAutoplay();
        window.removeEventListener('resize', this.updateVisibleCards.bind(this));
      }

      updateVisibleCards() {
        const width = window.innerWidth;
        if (width <= 749) {
          this.visibleCards = 2;
        } else if (width <= 989) {
          this.visibleCards = 3;
        } else {
          this.visibleCards = 4;
        }
      }

      cloneCards() {
        const clonedCards = this.cards.map(card => card.cloneNode(true));
        clonedCards.forEach(clone => this.track.appendChild(clone));
      }

      setupAutoplay() {
        if ({{ block.settings.enable_autoplay }} === false) return;
        
        this.autoplayInterval = setInterval(() => {
          this.slideNext();
        }, this.autoplayDelay);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      setupHoverPause() {
        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => this.setupAutoplay());
      }

      slideNext() {
        if (this.isTransitioning) return;
        
        this.isTransitioning = true;
        this.currentIndex++;

        const cardWidth = this.cards[0].offsetWidth;
        const gap = {{ block.settings.card_gap }};
        const offset = (cardWidth + gap) * this.currentIndex;
        
        this.track.style.transform = `translateX(-${offset}px)`;

        if (this.currentIndex >= this.totalCards) {
          setTimeout(() => {
            this.track.style.transition = 'none';
            this.currentIndex = 0;
            this.track.style.transform = 'translateX(0)';
            
            setTimeout(() => {
              this.track.style.transition = 'transform 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
              this.isTransitioning = false;
            }, 50);
          }, 600);
        } else {
          setTimeout(() => {
            this.isTransitioning = false;
          }, 600);
        }
      }
    }

    customElements.define('premium-product-slider-{{ ai_gen_id }}', PremiumProductSlider{{ ai_gen_id }});
  })();
</script>

