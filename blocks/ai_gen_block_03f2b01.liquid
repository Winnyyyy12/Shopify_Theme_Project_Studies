{% doc %}
  @prompt
    Create a custom Shopify section: “Clickable Banner Navigation” with full design control and smooth scroll animation.
    
    Core behavior
    
    Display one banner image
    
    Entire banner is clickable
    
    On click, navigate to:
    
    Selected collection OR product OR custom URL
    
    Banner must work across all screen sizes without breaking
    
    Customization (Theme Editor controls)
    
    Image picker (desktop & mobile)
    
    Banner width options:
    
    Full width / Contained
    
    Fixed banner height control (px / vh)
    
    Padding controls:
    
    Top, bottom, left, right (desktop & mobile)
    
    Border radius control
    
    Overlay toggle with:
    
    Overlay color
    
    Opacity slider
    
    Optional text overlay:
    
    Heading text
    
    Subtext
    
    Font size
    
    Text color
    
    Text alignment (left / center / right)
    
    Animation
    
    Entrance animation on scroll:
    
    Fade-up / Slide-up / Zoom-in (selectable)
    
    Smooth easing
    
    Trigger once when section enters viewport
    
    Admin-friendly
    
    All settings editable via Theme Customizer
    
    No hardcoded values
    
    Clean, reusable section
    
    Lightweight CSS & JS only (no external libraries)
    
    UX
    
    Cursor pointer on hover
    
    Subtle hover effect (scale or opacity)
    
    Fully accessible (alt text support)
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  assign link_url = ''
  
  if block.settings.link_type == 'collection' and block.settings.link_collection != blank
    assign link_url = block.settings.link_collection.url
  elsif block.settings.link_type == 'product' and block.settings.link_product != blank
    assign link_url = block.settings.link_product.url
  elsif block.settings.link_type == 'url' and block.settings.link_url != blank
    assign link_url = block.settings.link_url
  endif

  assign desktop_image = block.settings.desktop_image
  assign mobile_image = block.settings.mobile_image
  if mobile_image == blank
    assign mobile_image = desktop_image
  endif
%}

{% style %}
  .ai-banner-nav-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    margin: 0 auto;
  }

  .ai-banner-nav-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    {% if block.settings.banner_width == 'contained' %}
      max-width: {{ settings.page_width }}px;
      margin: 0 auto;
    {% endif %}
    padding-top: {{ block.settings.padding_top_desktop }}px;
    padding-bottom: {{ block.settings.padding_bottom_desktop }}px;
    padding-left: {{ block.settings.padding_left_desktop }}px;
    padding-right: {{ block.settings.padding_right_desktop }}px;
  }

  .ai-banner-nav-link-{{ ai_gen_id }} {
    display: block;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    cursor: pointer;
    transition: transform 0.3s ease;
    text-decoration: none;
  }

  .ai-banner-nav-link-{{ ai_gen_id }}:hover {
    {% if block.settings.hover_effect == 'scale' %}
      transform: scale(1.02);
    {% elsif block.settings.hover_effect == 'opacity' %}
      opacity: 0.9;
    {% endif %}
  }

  .ai-banner-nav-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    {% if block.settings.height_type == 'fixed_px' %}
      height: {{ block.settings.height_px }}px;
    {% elsif block.settings.height_type == 'fixed_vh' %}
      height: {{ block.settings.height_vh }}vh;
    {% else %}
      height: auto;
    {% endif %}
    overflow: hidden;
  }

  .ai-banner-nav-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-banner-nav-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-banner-nav-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-banner-nav-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-banner-nav-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .ai-banner-nav-text-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    pointer-events: none;
  }

  .ai-banner-nav-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_font_size }}px;
    margin: 0 0 10px;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-banner-nav-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtext_font_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  .ai-banner-nav-mobile-image-{{ ai_gen_id }} {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .ai-banner-nav-container-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top_mobile }}px;
      padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
      padding-left: {{ block.settings.padding_left_mobile }}px;
      padding-right: {{ block.settings.padding_right_mobile }}px;
    }

    .ai-banner-nav-desktop-image-{{ ai_gen_id }} {
      display: none;
    }

    .ai-banner-nav-mobile-image-{{ ai_gen_id }} {
      display: block;
    }

    .ai-banner-nav-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size | times: 0.7 }}px;
    }

    .ai-banner-nav-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_font_size | times: 0.8 }}px;
    }
  }

  .ai-banner-nav-{{ ai_gen_id }}.ai-banner-nav-animate-{{ ai_gen_id }} {
    opacity: 0;
  }

  .ai-banner-nav-{{ ai_gen_id }}.ai-banner-nav-visible-{{ ai_gen_id }} {
    animation: ai-banner-nav-entrance-{{ ai_gen_id }} 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  @keyframes ai-banner-nav-entrance-{{ ai_gen_id }} {
    {% if block.settings.animation_type == 'fade_up' %}
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    {% elsif block.settings.animation_type == 'slide_up' %}
      0% {
        opacity: 0;
        transform: translateY(60px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    {% elsif block.settings.animation_type == 'zoom_in' %}
      0% {
        opacity: 0;
        transform: scale(0.9);
      }
      100% {
        opacity: 1;
        transform: scale(1);
      }
    {% else %}
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    {% endif %}
  }
{% endstyle %}

<clickable-banner-{{ ai_gen_id }}
  class="ai-banner-nav-{{ ai_gen_id }} {% if block.settings.animation_type != 'none' %}ai-banner-nav-animate-{{ ai_gen_id }}{% endif %}"
  {{ block.shopify_attributes }}
>
  <div class="ai-banner-nav-container-{{ ai_gen_id }}">
    <a
      href="{{ link_url }}"
      class="ai-banner-nav-link-{{ ai_gen_id }}"
      {% if link_url == blank %}
        aria-disabled="true"
        tabindex="-1"
      {% endif %}
    >
      <div class="ai-banner-nav-image-wrapper-{{ ai_gen_id }}">
        {% if desktop_image %}
          <img
            src="{{ desktop_image | image_url: width: 2000 }}"
            alt="{{ desktop_image.alt | escape }}"
            loading="lazy"
            width="{{ desktop_image.width }}"
            height="{{ desktop_image.height }}"
            class="ai-banner-nav-image-{{ ai_gen_id }} ai-banner-nav-desktop-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-banner-nav-image-placeholder-{{ ai_gen_id }} ai-banner-nav-desktop-image-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-banner-nav-empty-state-{{ ai_gen_id }}">
              Add a desktop image to get started
            </div>
          </div>
        {% endif %}

        {% if mobile_image %}
          <img
            src="{{ mobile_image | image_url: width: 1000 }}"
            alt="{{ mobile_image.alt | escape }}"
            loading="lazy"
            width="{{ mobile_image.width }}"
            height="{{ mobile_image.height }}"
            class="ai-banner-nav-image-{{ ai_gen_id }} ai-banner-nav-mobile-image-{{ ai_gen_id }}"
          >
        {% endif %}

        {% if block.settings.show_overlay %}
          <div class="ai-banner-nav-overlay-{{ ai_gen_id }}"></div>
        {% endif %}

        {% if block.settings.show_text_overlay %}
          <div class="ai-banner-nav-text-overlay-{{ ai_gen_id }}">
            {% if block.settings.heading_text != blank %}
              <h2 class="ai-banner-nav-heading-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h2>
            {% endif %}
            {% if block.settings.subtext != blank %}
              <p class="ai-banner-nav-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </a>
  </div>
</clickable-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class ClickableBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.animationType = '{{ block.settings.animation_type }}';
        this.hasAnimated = false;
      }

      connectedCallback() {
        if (this.animationType !== 'none') {
          this.setupScrollAnimation();
        }
      }

      setupScrollAnimation() {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting && !this.hasAnimated) {
                this.classList.add('ai-banner-nav-visible-{{ ai_gen_id }}');
                this.hasAnimated = true;
                observer.unobserve(this);
              }
            });
          },
          {
            threshold: 0.2,
            rootMargin: '0px 0px -50px 0px'
          }
        );

        observer.observe(this);
      }
    }

    customElements.define('clickable-banner-{{ ai_gen_id }}', ClickableBanner{{ ai_gen_id }});
  })();
</script>

