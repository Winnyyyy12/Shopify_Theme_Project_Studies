<premium-product-slider-{{ ai_gen_id }}
  class="ai-premium-slider-{{ ai_gen_id }}"
  data-autoplay-interval="{{ block.settings.autoplay_interval }}"
  data-autoplay-enabled="{{ block.settings.enable_autoplay }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-premium-slider__container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <div class="ai-premium-slider__header-{{ ai_gen_id }}">
        <h2 class="ai-premium-slider__title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      </div>
    {% endif %}

    <div class="ai-premium-slider__viewport-{{ ai_gen_id }}">
      <div class="ai-premium-slider__track-{{ ai_gen_id }}">
        {% for i in (1..9) %}
          {% liquid
            assign product_key = 'product_' | append: i
            assign product = block.settings[product_key]
            assign tag_key = 'product_' | append: i | append: '_tag'
            assign tag = block.settings[tag_key]
            assign rating_key = 'product_' | append: i | append: '_rating'
            assign rating = block.settings[rating_key]
            assign extra_off_key = 'product_' | append: i | append: '_extra_off'
            assign extra_off = block.settings[extra_off_key]
          %}

          <div class="ai-premium-slider__card-{{ ai_gen_id }}" data-card-index="{{ i }}">
            {% if product != blank %}
              <a href="{{ product.url }}" class="ai-premium-slider__link-{{ ai_gen_id }}">
                <div class="ai-premium-slider__image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-premium-slider__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% else %}
                    <div class="ai-premium-slider__image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}

                  {% if tag != blank %}
                    <div class="ai-premium-slider__tag-pill-{{ ai_gen_id }}">{{ tag }}</div>
                  {% endif %}

                  {% if rating != blank %}
                    <div class="ai-premium-slider__rating-pill-{{ ai_gen_id }}">
                      {{ rating }}
                      <span class="ai-premium-slider__star-{{ ai_gen_id }}">★</span>
                    </div>
                  {% endif %}
                </div>

                <div class="ai-premium-slider__content-{{ ai_gen_id }}">
                  <h3 class="ai-premium-slider__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>

                  <div class="ai-premium-slider__pricing-row-{{ ai_gen_id }}">
                    <span class="ai-premium-slider__price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-premium-slider__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                  </div>

                  {% if extra_off != blank %}
                    <div class="ai-premium-slider__offer-row-{{ ai_gen_id }}">
                      <span class="ai-premium-slider__extra-off-{{ ai_gen_id }}">{{ extra_off }}</span>
                      <span class="ai-premium-slider__checkout-text-{{ ai_gen_id }}">At Checkout</span>
                    </div>
                  {% endif %}
                </div>
              </a>
            {% else %}
              <div class="ai-premium-slider__image-wrapper-{{ ai_gen_id }}">
                <div class="ai-premium-slider__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
                <div class="ai-premium-slider__tag-pill-{{ ai_gen_id }}">NEW</div>
                <div class="ai-premium-slider__rating-pill-{{ ai_gen_id }}">
                  4.8
                  <span class="ai-premium-slider__star-{{ ai_gen_id }}">★</span>
                </div>
              </div>

              <div class="ai-premium-slider__content-{{ ai_gen_id }}">
                <h3 class="ai-premium-slider__product-title-{{ ai_gen_id }}">Product {{ i }}</h3>
                <div class="ai-premium-slider__pricing-row-{{ ai_gen_id }}">
                  <span class="ai-premium-slider__price-{{ ai_gen_id }}">$99.00</span>
                  <span class="ai-premium-slider__compare-price-{{ ai_gen_id }}">$129.00</span>
                </div>
                <div class="ai-premium-slider__offer-row-{{ ai_gen_id }}">
                  <span class="ai-premium-slider__extra-off-{{ ai_gen_id }}">₹100 Extra Off</span>
                  <span class="ai-premium-slider__checkout-text-{{ ai_gen_id }}">At Checkout</span>
                </div>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</premium-product-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class PremiumProductSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.totalProducts = 9;
        this.visibleCards = 4;
        this.autoplayTimer = null;
        this.isTransitioning = false;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-premium-slider__track-{{ ai_gen_id }}');
        this.cards = Array.from(this.querySelectorAll('.ai-premium-slider__card-{{ ai_gen_id }}'));
        this.autoplayInterval = parseInt(this.dataset.autoplayInterval) * 1000;
        this.autoplayEnabled = this.dataset.autoplayEnabled === 'true';

        this.cloneCards();
        this.setupResponsive();
        
        if (this.autoplayEnabled) {
          this.startAutoplay();
        }

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplayEnabled) {
            this.startAutoplay();
          }
        });
      }

      cloneCards() {
        this.cards.forEach(card => {
          const clone = card.cloneNode(true);
          clone.classList.add('ai-premium-slider__card-clone-{{ ai_gen_id }}');
          this.track.appendChild(clone);
        });
      }

      setupResponsive() {
        const updateVisibleCards = () => {
          if (window.innerWidth <= 749) {
            this.visibleCards = 2;
          } else if (window.innerWidth <= 989) {
            this.visibleCards = 3;
          } else {
            this.visibleCards = 4;
          }
        };

        updateVisibleCards();
        window.addEventListener('resize', () => {
          updateVisibleCards();
          this.updateSliderPosition(false);
        });
      }

      startAutoplay() {
        this.stopAutoplay();
        this.autoplayTimer = setInterval(() => {
          this.slideNext();
        }, this.autoplayInterval);
      }

      stopAutoplay() {
        if (this.autoplayTimer) {
          clearInterval(this.autoplayTimer);
          this.autoplayTimer = null;
        }
      }

      slideNext() {
        if (this.isTransitioning) return;

        this.isTransitioning = true;
        this.currentIndex++;

        this.updateSliderPosition(true);

        if (this.currentIndex >= this.totalProducts) {
          setTimeout(() => {
            this.currentIndex = 0;
            this.updateSliderPosition(false);
            this.isTransitioning = false;
          }, 600);
        } else {
          setTimeout(() => {
            this.isTransitioning = false;
          }, 600);
        }
      }

      updateSliderPosition(animate) {
        const cardElement = this.cards[0];
        const cardWidth = cardElement.offsetWidth;
        const gap = parseInt(getComputedStyle(this.track).gap);
        const offset = this.currentIndex * (cardWidth + gap);

        if (animate) {
          this.track.style.transition = 'transform 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
        } else {
          this.track.style.transition = 'none';
        }

        this.track.style.transform = `translateX(-${offset}px)`;
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('premium-product-slider-{{ ai_gen_id }}', PremiumProductSlider{{ ai_gen_id }});
  })();
</script>

